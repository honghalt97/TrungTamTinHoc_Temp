@model IEnumerable<Album>
@{
    ViewBag.Title = "Album";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    List<Album> album = Model.ToList();
}
@section css{
    @Styles.Render("~/public/css/album")
}
@section scripts{
    @Scripts.Render("~/public/js/album")
}
@using TTTH.DataBase.Schema
<div class="row">
    <div class="col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Thêm ảnh</h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content" id="div-classes-of-course">
                <form action="/admin/Alum/ThemAnh" method="post" id="form-album">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group have-img">
                                <label for="course">Link ảnh</label>
                                <input class="form-control required link-img" name="Link" id="Link" tabindex="1" maxlength="255" />
                                <img class="review" src="" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="course">Caption</label>
                                <textarea class="form-control required" name="Note" id="Note" tabindex="2" rows="3" maxlength="500"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="form-group">
                                <button type="button" class="btn btn-primary" id="btn-save" tabindex="3">Lưu</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Album</h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content" id="div-classes-of-course">
                <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive middle has-control" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>Ảnh</th>
                            <th>Link</th>
                            <th>Caption</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < album.Count; i++)
                        {
                            <tr class="have-img">
                                <td>
                                    <img src="@album[i].Link" class="review" style="max-height: 200px; max-width: 200px;"/>
                                </td>
                                <td>
                                    <textarea class="form-control link-img link" rows="3" style="width: 100%" tabindex="4" id-album="@album[i].Id" maxlength="255" rows="2">@album[i].Link</textarea>
                                </td>
                                <td class="text-center">
                                    <textarea class="form-control caption-img" rows="3" style="width: 100%" tabindex="5" id-album="@album[i].Id" maxlength="500" rows="2">@album[i].Note</textarea>
                                </td>
                                <td class="text-center">
                                    <button type="button" class="btn btn-xs btn-danger btn-del" style="margin: 0px;" tabindex="6" id-album="@album[i].Id">
                                        <i class="fa fa-times" aria-hidden="true"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
